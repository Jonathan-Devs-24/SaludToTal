@model SaludTotal_AppWeb.Models.ProfesionalViewModel

<h2>Detalles del Profesional</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido</dd>

        <dt class="col-sm-2">DNI</dt>
        <dd class="col-sm-10">@Model.Dni</dd>

        <dt class="col-sm-2">Correo</dt>
        <dd class="col-sm-10">@Model.Correo</dd>

        <dt class="col-sm-2">Teléfono</dt>
        <dd class="col-sm-10">@Model.NroTelefono</dd>

        <dt class="col-sm-2">Matrícula</dt>
        <dd class="col-sm-10">@Model.NroMatricula</dd>

        <dt class="col-sm-2">Horario de Atención</dt>
        <dd class="col-sm-10">@Model.HorarioAtencion</dd>
    </dl>

    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
