@{
}

@model SaludTotal_AppWeb.Models.RegisterUserViewModel

<h2>Registrarse</h2>

<form asp-action="Register" method="post">
    <div><label>Nombre:</label><input asp-for="Nombre" /></div>
    <div><label>Apellido:</label><input asp-for="Apellido" /></div>
    <div><label>DNI:</label><input asp-for="Dni" /></div>
    <div><label>Correo:</label><input asp-for="Correo" /></div>
    <div><label>Teléfono:</label><input asp-for="NroTelefono" /></div>
    <div><label>Contraseña:</label><input asp-for="Contrasenia" type="password" /></div>
    <div>
        <label>Rol:</label>
        <select asp-for="Rol">
            <option value="Paciente">Paciente</option>
            <option value="Profesional">Profesional</option>
        </select>
    </div>
    <button type="submit">Registrarse</button>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}

<p><a href="/Home/Index">¿Ya tenés cuenta? Iniciar Sesión</a></p>
