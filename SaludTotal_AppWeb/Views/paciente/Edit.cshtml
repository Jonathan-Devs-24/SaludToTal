@model SaludTotal_AppWeb.Models.PacienteViewModel

<h2>Editar Paciente</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdPaciente" />

    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label>Apellido</label>
        <input asp-for="Apellido" class="form-control" />
    </div>
    <div class="form-group">
        <label>DNI</label>
        <input asp-for="Dni" class="form-control" />
    </div>
    <div class="form-group">
        <label>Correo</label>
        <input asp-for="Correo" class="form-control" />
    </div>
    <div class="form-group">
        <label>Teléfono</label>
        <input asp-for="NroTelefono" class="form-control" />
    </div>
    <div class="form-group">
        <label>Número Afiliado</label>
        <input asp-for="NumeroAfiliado" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>
