@model IEnumerable<SaludTotal_AppWeb.Models.PacienteViewModel>

<h2>Lista de Pacientes</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>DNI</th>
            <th>Correo</th>
            <th>Teléfono</th>
            <th>Afiliado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var paciente in Model)
    {
        <tr>
            <td>@paciente.Nombre</td>
            <td>@paciente.Apellido</td>
            <td>@paciente.Dni</td>
            <td>@paciente.Correo</td>
            <td>@paciente.NroTelefono</td>
            <td>@paciente.NumeroAfiliado</td>
            <td>
                <a asp-action="Details" asp-route-id="@paciente.IdPaciente" class="btn btn-info">Ver</a>
                <a asp-action="Edit" asp-route-id="@paciente.IdPaciente" class="btn btn-warning">Editar</a>
                <a asp-action="Delete" asp-route-id="@paciente.IdPaciente" class="btn btn-danger" onclick="return confirm('¿Estás seguro de eliminar este paciente?')">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
