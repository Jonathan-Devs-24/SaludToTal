@model List<SaludTotal_AppWeb.Models.PacienteViewModel>

<h1>Pacientes</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>DNI</th>
            <th>Correo</th>
            <th>Teléfono</th>
            <th>N° Afiliado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var paciente in Model)
        {
            <tr>
                <td>@paciente.Nombre</td>
                <td>@paciente.Apellido</td>
                <td>@paciente.Dni</td>
                <td>@paciente.Correo</td>
                <td>@paciente.NroTelefono</td>
                <td>@paciente.NumeroAfiliado</td>
            </tr>
        }
    </tbody>
</table>

<div>
    Página @ViewBag.Page de @ViewBag.TotalPages
    @if (ViewBag.Page > 1)
    {
        <a href="@Url.Action("Index", new { page = ViewBag.Page - 1 })">Anterior</a>
    }
    @if (ViewBag.Page < ViewBag.TotalPages)
    {
        <a href="@Url.Action("Index", new { page = ViewBag.Page + 1 })">Siguiente</a>
    }
</div>
